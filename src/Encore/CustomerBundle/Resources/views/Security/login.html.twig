{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}
{% block title %}
    Sign in
{% endblock title %}
{% block require_js %}
    require(["encore/authentication/signin"]);
{% endblock require_js %}
{% block fos_user_content %}
    {% if error %}
        <div>{{ error|trans }}</div>
    {% endif %}

    <div class="signIn-container">
        <div class="signup-signin-logo" onclick="location.href='{{ path('encore_home') }}';"></div>
        <form class="signIn-form" action="{{ path("fos_user_security_check") }}" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

            <div>
                <h1 class="signIn-header">Sign In</h1>
                <input class="username" placeholder="Username" type="text" data-required="true" data-trigger="change"
                       id="username"
                       data-required-message="Please enter your username" name="_username" value="{{ last_username }}"
                       required="required"/>
            </div>
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

            <div>
                <input class="password" placeholder="Password" type="password" data-required="true"
                       data-trigger="change"
                       data-required-message="Please enter your password" id="password" name="_password"
                       required="required"/>
            </div>
            <div class="checkbox">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
            <br/>
            <input class="submit" type="submit" id="_submit" name="_submit"
                   value="{{ 'security.login.submit'|trans }}"/>
        </form>
        <div class="to_register">
            <p>Not a member yet ? <a href="/signup">Join us!</a></p>
        </div>
    </div>

{% endblock fos_user_content %}
