{% extends 'EncoreCustomerBundle::layout.html.twig' %}

{% block title %}
    Advance search
{% endblock title %}

{% block require_js %}
    require(["libs/bootstrap/bootstrap-datepicker"]);
    require(["encore/search/advance-search"]);
{% endblock require_js %}

{% block css %}
    <link href="{{ asset('bundles/encorecustomer/css/libs/bootstrap/datepicker.css') }}" rel="stylesheet"/>
{% endblock css %}

{% block content %}
    <div class="search-main">
        <div class="nav-div">
            <ul class="nav nav-tabs">
                <li class="li-search">
                    <div class="search-background">
                        <a href="#search" data-toggle="tab">SEARCH</a>
                    </div>

                </li>
                <li class="li-filter">
                    <div class="filter-background">
                        <a href="#filter" data-toggle="tab">FILTER</a>
                    </div>
                </li>
            </ul>
        </div>
        <div class="tab-content">
            <div class="tab-pane active fade in" id="search">

                <form action="{{ path('encore_global_search') }}" method="GET" >
                    <input type="text" class="search-bar" name="search_result" placeholder="Keyword..."/>
                    <div class="search-logo"></div>
                </form>
            </div>
            <div class="tab-pane fade" id="filter">
                <div class="btn-group" data-toggle="buttons-checkbox"></div>
                <button type="button" class="btn btn-primary">Left</button>
                <button type="button" class="btn btn-primary">Middle</button>
                <button type="button" class="btn btn-primary">Right</button>
            </div>
        </div>
    </div>
{% endblock content %}